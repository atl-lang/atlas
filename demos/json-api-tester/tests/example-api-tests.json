{
  "name": "JSONPlaceholder API Tests",
  "description": "Example test suite for JSONPlaceholder public API",
  "tests": [
    {
      "name": "Get all posts - should return 200",
      "method": "GET",
      "url": "https://jsonplaceholder.typicode.com/posts",
      "assertions": [
        {
          "type": "status",
          "value": 200
        },
        {
          "type": "header_contains",
          "name": "Content-Type",
          "value": "application/json"
        }
      ]
    },
    {
      "name": "Get single post - should return post with id 1",
      "method": "GET",
      "url": "https://jsonplaceholder.typicode.com/posts/1",
      "assertions": [
        {
          "type": "status",
          "value": 200
        },
        {
          "type": "json_field_exists",
          "field": "id"
        },
        {
          "type": "json_field_exists",
          "field": "title"
        },
        {
          "type": "json_field_exists",
          "field": "body"
        },
        {
          "type": "json_field",
          "field": "id",
          "value": 1
        }
      ]
    },
    {
      "name": "Create new post - should return 201",
      "method": "POST",
      "url": "https://jsonplaceholder.typicode.com/posts",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "title": "Test Post",
        "body": "This is a test post from Atlas API tester",
        "userId": 1
      },
      "assertions": [
        {
          "type": "status",
          "value": 201
        },
        {
          "type": "json_field_exists",
          "field": "id"
        }
      ]
    },
    {
      "name": "Update post - should return 200",
      "method": "PUT",
      "url": "https://jsonplaceholder.typicode.com/posts/1",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "id": 1,
        "title": "Updated Title",
        "body": "Updated body content",
        "userId": 1
      },
      "assertions": [
        {
          "type": "status",
          "value": 200
        },
        {
          "type": "json_field",
          "field": "id",
          "value": 1
        }
      ]
    },
    {
      "name": "Delete post - should return 200",
      "method": "DELETE",
      "url": "https://jsonplaceholder.typicode.com/posts/1",
      "assertions": [
        {
          "type": "status",
          "value": 200
        }
      ]
    },
    {
      "name": "Get non-existent post - should return 404",
      "method": "GET",
      "url": "https://jsonplaceholder.typicode.com/posts/99999",
      "assertions": [
        {
          "type": "status",
          "value": 404
        }
      ]
    },
    {
      "name": "Get users - should return array",
      "method": "GET",
      "url": "https://jsonplaceholder.typicode.com/users",
      "assertions": [
        {
          "type": "status",
          "value": 200
        },
        {
          "type": "body_contains",
          "value": "Leanne Graham"
        }
      ]
    }
  ]
}
