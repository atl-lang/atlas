{
  "name": "HTTPBin Test Suite",
  "description": "Tests using httpbin.org for HTTP testing",
  "tests": [
    {
      "name": "GET request with JSON response",
      "method": "GET",
      "url": "https://httpbin.org/json",
      "assertions": [
        {
          "type": "status",
          "value": 200
        },
        {
          "type": "header_contains",
          "name": "Content-Type",
          "value": "application/json"
        }
      ]
    },
    {
      "name": "POST with JSON body",
      "method": "POST",
      "url": "https://httpbin.org/post",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "test": "data",
        "number": 42
      },
      "assertions": [
        {
          "type": "status",
          "value": 200
        },
        {
          "type": "body_contains",
          "value": "test"
        }
      ]
    },
    {
      "name": "Status code test - 200 OK",
      "method": "GET",
      "url": "https://httpbin.org/status/200",
      "assertions": [
        {
          "type": "status",
          "value": 200
        }
      ]
    },
    {
      "name": "Status code test - 404 Not Found",
      "method": "GET",
      "url": "https://httpbin.org/status/404",
      "assertions": [
        {
          "type": "status",
          "value": 404
        }
      ]
    },
    {
      "name": "Delay test - 2 second delay",
      "method": "GET",
      "url": "https://httpbin.org/delay/2",
      "timeout": 5000,
      "assertions": [
        {
          "type": "status",
          "value": 200
        }
      ]
    }
  ]
}
